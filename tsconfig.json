{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "NodeNext",
    "target": "ESNext",
    "strictNullChecks": true,
    // "strict": true,
    // "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext"
  },
  "include": [
    // "@types/tap.d.ts",
    "@types/test.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules/@types/node/test.d.ts"
  ]
}